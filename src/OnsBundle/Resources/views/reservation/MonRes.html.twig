{% extends 'base.html.twig' %}

{% block content %}




    <div class="careplus-subheader">
        <div class="careplus-subheader-image">
            <span class="careplus-dark-transparent"></span>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Esprit Entre'aide</h1>
                        <span>Bienvenue Sur Notre Plateform</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="careplus-breadcrumb">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ul>
                            <li><a href="#">Homepage</a></li>
                            <li>Vos Reservations</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--// SubHeader \\-->

    <!--// Main Content \\-->
    <div class="careplus-main-content">

        <!--// Main Section \\-->
        <div class="careplus-main-section">
            <div class="container">
                <div class="row">

                    <div class="col-md-12">
                        <div class="careplus-shop careplus-shop-grid">
                            <ul class="row">
                                {% for res in reservation %}
                                    <li class="col-md-4">
                                        <figure><a href="shop-detail.html"><img src="extra-images/shop-grid-img1.jpg" alt=""><span><i class="fa fa-link"></i><small></small></span></a></figure>
                                        <div class="careplus-shop-grid-text">
                                            <h5><a href="shop-detail.html">Numero de reservation <i>{{ res.idCovoiturage.idcovoiturage }}</i></a></h5>
                                            <span>Depart: <h7><i>{{ res.idCovoiturage.Depart }}</i></h7></span>
                                            <span>Arrive: <h7><i>{{ res.idCovoiturage.Arrive }}</i></h7></span>
                                            <span>Date Depare: <h7><i>{{ res.idCovoiturage.temps|date('Y-m-d') }}</i></h7></span>
                                            <span>Type: <h7><i>{{ res.idCovoiturage.Type }}</i></h7></span>
                                            <span>Prix: <h7><i>{{ res.idCovoiturage.Prix }}</i></h7></span>
                                            <span>Nombre de places: <h7><i>{{ res.idCovoiturage.nbrPlace }}</i></h7></span>

                                            <a id="1" href="{{  path('reservation_cancel', { id:res.idReservation }) }}" class="careplus-readmore-btn">Cancel <span></span></a>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <!--// Pagination \\-->
                        <div class="careplus-pagination">

                            {{ knp_pagination_render(reservation) }}
                        </div>
                        <!--// Pagination \\-->
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}




